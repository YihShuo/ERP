{$R *.dfm}

procedure TInventoryBC_Print.ReadIni();
var MyIni :Tinifile;
    AppDir,ComNameCH,ComName:string;
begin
  //
  AppDir:=ExtractFilePath(Application.ExeName);
  if FileExists(AppDir+'\ComName.ini')=true then
  begin
    try
      MyIni := Tinifile.Create(AppDir+'\ComName.ini');
      ComNameCH:=MyIni.ReadString('ERP','ComNameCH','億春責任有限公司');
      ComName:=MyIni.ReadString('ERP','ComName1','CONG TY TNHH TY XUAN');
    finally
      MyIni.Free;
    end;
  end;
  QRLabel42.Caption:=ComNameCH;
  QRLabel41.Caption:=ComName;
end;

procedure TInventoryBC_Print.FormClose(Sender: TObject;
  var Action: TCloseAction);
begin
  action:=caFree;
end;

procedure TInventoryBC_Print.FormDestroy(Sender: TObject);
begin
  InventoryBC_Print:=nil;
end;


procedure TInventoryBC_Print.FormCreate(Sender: TObject);
var
  sYear, sMonth, sDay, currentDateStr: string;
begin
  ReadIni();
  if Assigned(Inventory_BC) and Assigned(Inventory_BC.DTP5) then
  begin
    sYear := FormatDateTime('yyyy', Inventory_BC.DTP5.Date);
    sMonth := FormatDateTime('mm', Inventory_BC.DTP5.Date);

    L1.Caption := 'BANG KIEM KE THANH PHAM THANG ' + sMonth + ' NAM ' + sYear;
    QRLabel38.Caption := sYear + '年' + sMonth + '月成品盤點表';
  end
  else
  begin
    L1.Caption := 'BANG KIEM KE THANH PHAM';
    QRLabel38.Caption := '';
  end;

  sDay := FormatDateTime('dd', Now);
  sMonth := FormatDateTime('mm', Now);
  sYear := FormatDateTime('yyyy', Now);

  QRLabel6.Caption := 'Ngay日 ' + sDay + ' thang月 ' + sMonth + ' nam年 ' + sYear;
end;

end.
