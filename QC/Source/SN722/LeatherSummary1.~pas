         exit;
     end ;

     try
        Excel:=CreateOleObject('Excel.Application');
        Excel.Visible:=True;

        Excel.Workbooks.Open(GetCurrentDir+'\QIP Report\Leather Grading inspection reports.xls');

        Excel.Cells(2,8):= 'No.: ' + qry_All.FieldByName('ReportID').AsString;
