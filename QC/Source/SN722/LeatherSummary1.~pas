begin
    if (qry_SD.FieldByName('USERID').Value <> main.edit1.Text) then
    begin
      Messagedlg('It is not yours,can not modify!!!',mtwarning,[mbyes],0);
      abort;
    end;

    with qry_SD do
    begin
        RequestLive:=true;
        CachedUpdates:=true;
