        Excel.Cells(5,1):= 'Art no.';
        Excel.Cells(6,1):= 'Ten vat tu/mau sac' + chr(10) + 'Material name/Color';
        Excel.Cells(7,1):= 'Ma so vat tu' + chr(10) + 'Material code';
        Excel.Cells(8,1):= 'RY';

        Excel.Cells(4,6):= 'Xuong cung ung' + chr(10) + 'Supplier';
