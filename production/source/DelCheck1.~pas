type
  TDelCheck = class(TForm)
    Panel1: TPanel;
    Query1: TQuery;
    DataSource1: TDataSource;
    DBGrid1: TDBGrid;
    Label1: TLabel;
    Edit1: TEdit;
    Label2: TLabel;
    Edit2: TEdit;
    Button1: TButton;
    Query1LLNO: TStringField;
    Query1CLBH: TStringField;
    Query1DFL: TStringField;
    Query1SCBH: TStringField;
    Query1TempQty: TCurrencyField;
