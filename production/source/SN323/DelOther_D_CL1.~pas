end;

procedure TDelOther_D_CL.FormCreate(Sender: TObject);
begin
  if DelOther_D.IsHide_Warehouse_XT='Y' then
  begin
    DBGridEh1.Columns[9].Visible:=false;
    DBGridEh1.Columns[11].Visible:=false;
  end;
end;

