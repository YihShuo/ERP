    QRShape47: TQRShape;
    QRShape48: TQRShape;
    QRShape49: TQRShape;
    QRShape50: TQRShape;
    QRShape52: TQRShape;
    QRShape53: TQRShape;
    QRPDFFilter1: TQRPDFFilter;
