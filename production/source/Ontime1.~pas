begin

if QRepMas.FieldByName('SCDate').value<Date-1 then
  begin
    showmessage('You can not modify the production report 2 days ago.');
    abort;
  end;

 with QRepMas do
  begin
    cachedupdates:=true;
    requestlive:=true;
