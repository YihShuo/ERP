procedure TWarehouseRep.FormClose(Sender: TObject;
  var Action: TCloseAction);
begin
free;
end;

procedure TWarehouseRep.Button1Click(Sender: TObject);
begin
with DailyRep do
  begin
    active:=false;
    sql.Clear;
    sql.add('select convert(varchar,SCSMRK.USERDate,111) as USERDate,count(SCSMRK.CTNO) as CTQty,sum(SCSMRK.Qty) as Qty');
    sql.add('from SCSMRK ');
    sql.add('left join DDZL on DDZL.DDBH=SCSMRK.DDBH ');
    sql.Add('left join XXZL on XXZL.XieXing=DDZL.XieXing and XXZL.SheHao=DDZL.SheHao');
    sql.add('where convert(smalldatetime,convert(varchar,SCSMRK.USERDate,111)) between ');
    sql.add(''''+formatdatetime('yyyy/MM/dd',DTP1.date)+''''+' and  '+''''+formatdatetime('yyyy/MM/dd',DTP2.date)+''''  );
    sql.add('and DDZL.Article like '+''''+edit1.Text+'%'+'''');
    sql.add('and XXZL.XieMing like '+''''+'%'+edit2.Text+'%'+'''');
    sql.add('and SCSMRK.DDBH like '+''''+edit3.text+'%'+'''');
    sql.add('group by convert(varchar,SCSMRK.USERDATE,111) ');
    sql.add('order by convert(varchar,SCSMRK.USERDATE,111) ');
    active:=true;
  end;
{DDZLRep.Active:=true;
DDCC.active:=true;   }

end;

