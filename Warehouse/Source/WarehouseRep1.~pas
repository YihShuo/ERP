end;

procedure TWarehouseRep.FormCreate(Sender: TObject);
begin
DTP1.Date:=date-7;
DTP2.date:=Date; 
end;

procedure TWarehouseRep.Button2Click(Sender: TObject);
var
      eclApp,WorkBook:olevariant;
 //     xlsFileName:string;
      i,j:integer;
begin
DDCC.active:=false;
DDZLRep.active:=false;
if DailyRep.Active then
  begin
    if DailyRep.recordcount=0 then
      begin
        showmessage('No record.');
        abort;
      end;
  end
  else
    begin
      showmessage('No record.');
      abort;
    end;

try
  eclApp:=CreateOleObject('Excel.Application');
  WorkBook:=CreateOleObject('Excel.Sheet');
except
  Application.MessageBox('NO Microsoft   Excel','Microsoft   Excel',MB_OK+MB_ICONWarning);
  Exit;
end;

try
  WorkBook:=eclApp.workbooks.Add; 
  eclApp.Cells(1,1):='NO';
  for   i:=1   to   DailyRep.fieldcount   do
    begin
      eclApp.Cells(1,i+1):=DailyRep.fields[i-1].FieldName;
    end;
  DailyRep.First;
  j:=2;
  while   not  DailyRep.Eof   do
    begin
      eclApp.Cells(j,1):=j-1;
      for   i:=1   to   DailyRep.fieldcount   do
        begin
          eclApp.Cells(j,i+1):=DailyRep.Fields[i-1].Value;
          eclApp.Cells.Cells.item[j,i+1].font.size:='8';
        end;
      DailyRep.Next;
      inc(j);
    end;
  eclapp.columns.autofit;
  showmessage('Succeed.');
  eclApp.Visible:=True;
  DDCC.active:=true;
  DDZLRep.active:=true;
except
  on   F:Exception   do
    showmessage(F.Message);
end;

end;

procedure TWarehouseRep.DailyRepAfterScroll(DataSet: TDataSet);
begin
with DDZLRep do
  begin
    active:=false;
    sql.clear;
    sql.add('select SCSMRK.DDBH,sum(SCSMRK.Qty) as Qty,count(SCSMRK.CTNO) as CTQty,');
    sql.add('convert(varchar,SCSMRK.USERDate,111) as USERDate') ;
    sql.add('from SCSMRK');
    sql.add('left join DDZL on DDZL.DDBH=SCSMRK.DDBH ');
    sql.Add('left join XXZL on XXZL.XieXing=DDZL.XieXing and XXZL.SheHao=DDZL.SheHao');
    sql.add('where convert(varchar,SCSMRK.USERDate,111)=:USERDate');    
    sql.add('and DDZL.Article like '+''''+edit1.Text+'%'+'''');
    sql.add('and XXZL.XieMing like '+''''+'%'+edit2.Text+'%'+'''');
    sql.add('and SCSMRK.DDBH like '+''''+edit3.text+'%'+'''');
    sql.add('group by SCSMRK.DDBH,convert(varchar,SCSMRK.USERDate,111)');
    sql.add('order by SCSMRK.DDBH,convert(varchar,SCSMRK.USERDate,111)');
    active:=true;
    DDCC.active:=true;
  end;

end;

end.
