  TMaterialSet = class(TForm)
    Panel1: TPanel;
    Label3: TLabel;
    Label1: TLabel;
    Label4: TLabel;
    Label5: TLabel;
    Label7: TLabel;
    Button1: TButton;
    Edit3: TEdit;
    CBX2: TComboBox;
    CBX3: TComboBox;
    Edit1: TEdit;
    Edit5: TEdit;
