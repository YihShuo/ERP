procedure TDeliver_EquipmentB.BDT5Click(Sender: TObject);
begin
  if DelDet.RequestLive then
  begin
    showmessage('Pls save Master data first.');
    Abort;
  end;
  if DelDet.RecordCount = 0  then
  begin
    showmessage('Pls insert the Discard Equipment first');
  end else
  begin
    Deliver_EquipmentB_print:=TDeliver_EquipmentB_print.Create(self);
    Deliver_EquipmentB_print.quickrep1.prepare;
    Deliver_EquipmentB_print.quickrep1.preview;
    Deliver_EquipmentB_print.free;
  end;
end;

procedure TDeliver_EquipmentB.BDT6Click(Sender: TObject);
var eclApp,WorkBook:olevariant;
    i,j:integer;
begin
  if  DelDet.active  then
  begin
    try
      eclApp:=CreateOleObject('Excel.Application');
      WorkBook:=CreateOleObject('Excel.Sheet');
    except
      Application.MessageBox('No Microsoft   Excel','Microsoft   Excel',MB_OK+MB_ICONWarning);
      Exit;
    end;
    try
        WorkBook:=eclApp.workbooks.Add;
        for   i:=0   to   DBGrid2.Columns.Count-1   do
          begin
              eclApp.Cells(1,i+1):=DBGrid2.Columns[i].Title.Caption;
          end;

        DelDet.First;
        j:=2;
        while   not   DelDet.Eof   do
          begin
            for   i:=0   to  DBGrid2.Columns.Count-1  do
            begin
              eclApp.Cells(j,i+1):=DBGrid2.Fields[i].AsString;
            end;
          DelDet.Next;
          inc(j);
          end;
       eclapp.columns.autofit;
       showmessage('Succeed');
       eclApp.Visible:=True;
    except
        on   F:Exception   do
          showmessage(F.Message);
    end;
  end;
end;

procedure TDeliver_EquipmentB.BDT7Click(Sender: TObject);
begin
  if DelDet.RequestLive then
  begin
    showmessage('Pls save Master data first.');
    Abort;
  end;
  if DelDet.RecordCount = 0  then
  begin
    showmessage('Pls insert the Discard Equipment first');
  end else
  begin
    Deliver_EquipmentB_printTW:=TDeliver_EquipmentB_printTW.Create(self);
    with Deliver_EquipmentB.DelDet do
    begin
      First;
      while Not Eof do
      begin
        if Deliver_EquipmentB.DelDet.FieldByName('COLUMN6').Value='1' then
          Deliver_EquipmentB_printTW.LB3.Caption:='V';
        if Deliver_EquipmentB.DelDet.FieldByName('COLUMN6').Value='2' then
          Deliver_EquipmentB_printTW.LB5.Caption:='V';
        Next;
      end;
    end;
    Deliver_EquipmentB_printTW.quickrep1.prepare;
    Deliver_EquipmentB_printTW.quickrep1.preview;
    Deliver_EquipmentB_printTW.free;
  end;

end;

