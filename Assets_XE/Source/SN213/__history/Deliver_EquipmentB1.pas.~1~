  DBGrid2.Columns[7].ReadOnly:=true;
  DBGrid2.Columns[7].Title.Caption:='報廢|Bao Phe';
  DBGrid2.Columns[10].Visible:=true;
  DBGrid2.Columns[10].Title.Caption:='報廢類別|Loai Bao Phe';
  DBGrid2.Columns[13].Visible:=true;
  DBGrid2.Columns[13].Title.Caption:='報廢原因|Nguyen nhan';
  BB_GBox.Visible:=true;
  BB_GBox.Left:=GroupBox_Left;
  //
end;
