procedure TDeliver_EquipmentB.ReadIni();
var MyIni :Tinifile;
    AppDir,ComNameCH,ComName,AssetsN219_ISO:string;
    //
    sline_PW,tempstr_PW:string;
    ad_PW,i:integer;
begin

  AssetsN213_CheckPrint:='TX';
  //
  AppDir:=ExtractFilePath(Application.ExeName);
  if FileExists(AppDir+'\ComName.ini')=true then
  begin
    try
      MyIni := Tinifile.Create(AppDir+'\ComName.ini');
      AssetsN213_CheckPrint:=MyIni.ReadString('ERP','AssetsN213_CheckPrint','TX');

      //
    finally
      MyIni.Free;
    end;
  end;
end;
//
