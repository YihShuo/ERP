procedure TESG.Button1Click(Sender: TObject);
begin
  with query1 do
  begin
    active:=false;
    sql.Clear;
    sql.Add('select  * from CGZL_ESG');
    sql.add('where CGNO like ');
    sql.add(''''+edit1.Text+'%'+'''');
    sql.add('and yn<>0');
    if chkUserdate.Checked then
    begin
      sql.add('and convert(smalldatetime,convert(varchar,USERDATE,111))  between ');
      sql.add(''''+formatdatetime('yyyy/MM/dd',DTP1.Date) +''' and  '''+formatdatetime('yyyy/MM/dd',DTP2.Date) +'''');
    end;  
    sql.add('order by CGNO,Location');
    active:=true;
  end;
  bb2.enabled:=true;
  bb3.enabled:=true;
  bb4.enabled:=true;
  bbt6.enabled:=true;
end;

procedure TESG.BB2Click(Sender: TObject);
begin
  with query1 do
  begin
    cachedupdates:=true;
    requestlive:=true;
    Insert;
  end;
  bb5.enabled:=true;
  bb6.enabled:=true;
end;

procedure TESG.BB4Click(Sender: TObject);
begin
  with query1 do
  begin
